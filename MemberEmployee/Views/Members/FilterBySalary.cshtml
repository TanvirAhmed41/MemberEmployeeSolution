@model IEnumerable<MemberEmployee.Models.Entities.Member>
@{
    ViewBag.Title = "FilterBy                                                                                                                                                                                                                                                   Salary";
}

<h2>FilterBySalary</h2>

<<table class="table">
    <thead>
        <tr>
            <th>Member Name</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model)
        {
            <tr>
                <td>@member.Name</td>
                <td>@member.Email</td>
                <td>@member.DateOfBirth.ToString("dd/MM/yyyy")</td>
                <td>
                    @if (member.Employee != null)
                    {
                        @member.Employee.Salary.ToString("C") <!-- Format salary as currency -->
                    }
                    else
                    {
                        <span>No Employee</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
